<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
</head>
<body>
    @*<header class="col-sm-6">*@
        <nav class="navbar sticky-top col-sm-7 header">
            <div class="container-fluid">
                <div class="row" style="width:100%">
                    <div class="col-sm-1">
                        <a asp-controller="Home" asp-action="Index"><i class="bi bi-house" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Galvenā"></i></a>
                    </div>
                    <div class="col-sm-9">
                        <a asp-controller="Home" asp-action="Photo"><i class="bi bi-camera" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Nofočēt"></i></a>
                    </div>
                    <div class="col-sm-1" style="text-align:right;padding-right:0">
                        <a asp-controller ="Home" asp-action="Profile"><i class="bi bi-person" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Profils"></i></a>
                    </div>
                    <div class="col-sm-1" style="text-align:right;padding-right:0">
                        <a asp-controller="Home" asp-action="Exit"><i class="bi bi-box-arrow-in-right" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Iziet"></i></a>
                    </div>
                </div>
            </div>
        </nav>
    @*</header>*@
    <div class="container container-main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
<script>
    $(function () {
        $('[data-bs-toggle="tooltip"]').tooltip()
    })
</script>
</html>
